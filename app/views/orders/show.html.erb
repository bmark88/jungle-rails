<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
    <div>
      <div class="order-item-container">
        <% @order.line_items.each do |item| %>
          <div class="order-item">
            <p>
              <strong>
              Line item:
              </strong> 
              <%= item.id %> (Product No. <%= item.product_id %>)
            </p>
            <p>
              <strong>
                Item name:
              </strong>
              <%= item.product.name %>
            </p>
            <p>
              <strong>
                Quantity Ordered:
              </strong> 
              <%= item.quantity %>
            </p>
            <p>
              <strong>
                Line item total:
              </strong> 
              <%= humanized_money_with_symbol item.total_price %> 
            </p>
            <p>
              <strong>
                Individual line item price:
              </strong> 
              <%= humanized_money_with_symbol item.item_price %>
            </p>
          </div>
        <% end %>
      </div>
      <div class="order-total">
        <p>
          <strong>
            Your total:
          </strong> 
          <%= humanized_money_with_symbol @order.total  %>
        </p>
        <p>
          You will be notified at 
          <strong>
            <%= @order.email %>
          </strong> 
          when your order has shipped. 
        </p>
      </div>
      <p class="order-item-message">Check out what you ordered below:</p>
      <div class="order-image-container">
      <% @products.each do |item| %>
        <div>
          <strong>
            <%= item.name %>:
          </strong> 
          <%= item.description %>
        </div>
        <img 
          src=<%= item.image %> 
          class="order-item-image"
        />
      <% end %>  
      </div>
    </div>
  </header>
  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
</section>
